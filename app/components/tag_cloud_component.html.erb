<% tag_cloud(@tags, %w(badge-sm badge badge-md badge-lg)) do |tag, css_class| %>
  <%= link_to url_for(params.permit!.merge(tags: params[:tags].include?(tag.name) ? params[:tags] - [tag.name] : params[:tags] + [tag.name])), data: { turbo_frame: "results_frame" }, class: "inline #{params[:tags].include?(tag.name) ? "" : "" }" do %>
    <span class="inline-block align-bottom badge <%= css_class %> <%= params[:tags].include?(tag.name) ? "badge-warning" : "badge-outline" %>">
    <span class=""><%= tag.name.humanize %></span>
    <% if params[:tags].include?(tag.name) %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    <% end %>
    </span>
  <% end %>
<% end %>