<div id="<%= dom_id assemblee %>" class="mt-8 pb-8 border-b border-gray-200">
  <p class="text-2xl font-bold">
    <%= assemblee.nom %>
  </p>
  <p>
    <%= l(assemblee.début, format: :long) %>
  </p>

  <p>
    <%= assemblee.adresse %>
  </p>

  <p class="my-4">
    <strong>Nbr Signatures :</strong>
    <%= assemblee.presences.count %> / <%= User.count %>
  </p>

  <div class="flex gap-4 mt-2">
    <%= link_to_if assemblee.presences.any? , "Voir les émargements", presences_path(assemblee_id: assemblee.id), class: 'btn btn-info btn-sm' %>
    <%= link_to "Modifier", edit_assemblee_path(assemblee), class:'btn btn-primary btn-sm' %>
    <%= link_to "Générer les convocations (PDF)", assemblee_path(assemblee, format: :pdf), class:'btn btn-error btn-outline btn-sm' %>
    <%= button_to "Supprimer", assemblee, method: :delete, class:'btn btn-error btn-sm' %>
  </div>

</div>
