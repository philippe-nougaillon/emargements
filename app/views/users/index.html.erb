<div>
  <h1 class="text-4xl font-bold mb-4">Utilisateurs</h1>
</div>

<%= form_tag request.path, method: :get do %>
  <div class="flex items-end gap-4">
    <div class="w-1/6">
      <%= label_tag :search, "Nom/PrÃ©nom/Email" %>
      <%= text_field_tag :search, params[:search], include_blank:true, onchange:'this.form.submit()', class: 'input input-bordered input-sm w-full' %>
    </div>
    <div>
      <% tag_cloud(@tags, %w(badge-sm badge badge-md badge-lg)) do |tag, css_class| %>
          <%= link_to url_for(params.permit!.merge(tag: tag.name)), data: { turbo_frame: "results_frame" }, class: "inline #{tag.name == params[:tag] ? "" : "" }" do %>
              <span class="inline-block align-bottom badge <%= css_class %> <%= tag.name == params[:tag] ? "badge-outline" : "badge-warning" %>">
                  <span class=""><%= tag.name.humanize %></span>
                  <% if params[:tag] == tag.name %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                  <% end %>
              </span>
          <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div id="users" class="mt-8">
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</div>


<p class="mt-8">Affichage de <b><%= @users.count %></b> utilisateurs sur <%= User.all.count %> au total</p>