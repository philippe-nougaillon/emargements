<div>
  <%= link_to "Nouvel Utilisateur", new_user_path, class:'btn btn-primary btn-outline btn-lg float-end' %>
  <h1 class="text-4xl font-bold mb-4">Utilisateurs</h1>
</div>

<%= form_tag request.path, method: :get do %>
  <div class="flex flex-wrap items-end gap-4">
    <div class="max-w-72">
      <%= label_tag :search, "Nom/Prénom/Email" %>
      <%= text_field_tag :search, params[:search], include_blank:true, onchange:'this.form.submit()', class: 'input input-bordered input-sm w-full' %>
    </div>

    <div class="max-w-72 w-full">
      <%= label_tag :assemblee_id, "Assemblée" %>
      <%= select_tag :assemblee_id, options_from_collection_for_select(@assemblees, :id, :nom, params[:assemblee_id]), include_blank: true, onchange: 'this.form.submit()' %>
    </div>
    <div>
      <%= render TagCloudComponent.new(tags: @tags) %>
    </div>
  </div>
<% end %>

<div id="users" class="mt-8">
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</div>


<p class="mt-8">Affichage de <b><%= @users.count %></b> utilisateurs sur <%= User.all.count %> au total</p>

<script>
  new SlimSelect({
    select: '#assemblee_id',
    settings: {
      searchPlaceholder: 'Recherche',
      searchText: 'Pas de résultat',
      searchingText: 'Recherche...',
      placeholderText: 'Filtrer par assemblée',
      allowDeselect: true
    }
  })
</script>
