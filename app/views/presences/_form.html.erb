<%= form_with(model: presence) do |form| %>
  <% if presence.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(presence.errors.count, "error") %> prohibited this presence from being saved:</h2>

      <ul>
        <% presence.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p style="color: green" class="text-2xl notice font-bold mb-4"><%= notice %></p>

  <div class="mb-4">
    <%= form.label :nom, style: "display: block" %>
    <%= form.collection_select(:participant_id, @participants, :id, :nom, {required: true}, class:"input input-bordered input-sm w-full") %>
  </div>

  <div>
    <%= form.label :signature, style: "display: block" %>
    <%= form.text_field :signature, style:'display: none' %>
  </div>

  <div id="signature">
    <div class="wrapper">
      <canvas id="signature-pad" class="signature-pad border border-slate-300" width=700 height=350></canvas>
    </div>

    <div class="flex gap-4 mt-4">
      <button id="save" class="btn btn-success btn-lg">Enregistrer</button>
      <a id="clear" class="btn btn-lg">Effacer</a>
    </div>
  </div>
<% end %>


<script>
  var signaturePad = new SignaturePad(document.getElementById('signature-pad'));
  var signatureField = document.getElementById('presence_signature');
  var saveButton = document.getElementById('save');
  var cancelButton = document.getElementById('clear');

  saveButton.addEventListener('click', function (event) {
    if (signaturePad.isEmpty()){
      event.preventDefault();
    } else {
      signatureField.setAttribute('value', signaturePad.toDataURL("image/svg+xml"));
    }
  });

  cancelButton.addEventListener('click', function (event) {
    signaturePad.clear();
  });
</script>