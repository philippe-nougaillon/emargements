<div>
  <h1 class="text-4xl font-bold mb-8">Liste des émargements</h1>
</div>
<%= form_tag request.path, method: :get do %>
  <div class="flex items-end gap-4">
    <div class="w-1/6">
      <%= label_tag :search, "Rechercher" %>
      <%= text_field_tag :search, params[:search], include_blank:true, onchange:'this.form.submit()', class: 'input input-bordered input-sm w-full', placeholder: 'Nom/Prénom/Email' %>
    </div>
<%= render TagCloudComponent.new(tags: @tags) %>
  </div>
<% end %>

<div id="presences" class="flex flex-wrap gap-4 justify-between px-12 mb-12">
  <% @presences.each do |presence| %>
    <%= render presence %>
  <% end %>
</div>

<p class="mt-8">Affichage de <b><%= @presences.count %></b> émargements</p>

<%= link_to presences_path(params.merge(format: :xls)), class: "text-success hover:underline" do %>
  Exporter vers Excel
<% end %>
|
<%= link_to presences_path(params.merge(format: :pdf)), class: "text-error hover:underline mb-12" do %>
  Exporter vers PDF
<% end %>