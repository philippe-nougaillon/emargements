<h1 class="text-4xl font-bold mb-6">ÉMARGEMENT <%= @presence.assemblee.nom if @presence.assemblee %></h1>

<%= form_tag({action: "signature_do", method: :post}) do %>
  <% if @presence.errors.any? %>
    <div style="color: red">
      <ul>
        <% @presence.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @presence.assemblee.in_progress? %>
    <%= hidden_field_tag :assemblee_id, params[:assemblee_id] %>
    <div class="flex flex-wrap gap-24">
      <div class="flex flex-col">
        <div class="mb-4">
          <%= label_tag :user_id, "Utilisateur", style: "display: block" %>
          <%= select_tag :user_id, options_from_collection_for_select(@users_not_signed, :id, :nom_prénom) %>
        </div>
        <div>
          <div>
            <%= label_tag :signature, "Signature", style: "display: block" %>
            <%= text_field_tag :signature, "", style:'display: none' %>
          </div>

          <div id="signature-container">
            <div class="wrapper">
              <canvas id="signature-pad" class="signature-pad border border-slate-300" width=700 height=350></canvas>
            </div>

            <% if ((@presence.assemblee.début + @presence.assemblee.durée.to_f.hours) - Time.current).positive? %>
              <p class="mt-2">
                Temps restant :
                <%= time_ago_in_words @presence.assemblee.fin %>
              </p>
            <% end %>

            <div class="flex gap-4 mt-4">
              <button id="save" class="btn btn-primary btn-outline btn-lg">Enregistrer</button>
              <a id="clear" class="btn btn-lg">Effacer</a>
            </div>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-2xl font-bold mb-4"><%= @presence.assemblee.nom %></h2>
        <h3 class="text-xl font-bold mb-4">Derniers émargements</h3>
        <% @presence.assemblee.presences.order(created_at: :desc).each do |p| %>
          <%= p.user.nom_prénom %> a signé il y a <%= time_ago_in_words p.created_at%>
          <br>
        <% end %>
      </div>
    </div>
  <% elsif @presence.assemblee.début < DateTime.now %>
    <p>L'assemblée n'a pas encore commencé. Elle commencera le <%= l @presence.assemblee.début.to_date %> à <%= @presence.assemblee.début.strftime("%H:%M") %></p>
  <% else %>
    <p>L'assemblée est terminée. Vous ne pouvez plus signer.</p>
  <% end %>
<% end %>

<script>
  var signaturePad = new SignaturePad(document.getElementById('signature-pad'));
  var signatureField = document.getElementById('signature');
  var saveButton = document.getElementById('save');
  var cancelButton = document.getElementById('clear');

  console.log(signaturePad);
  console.log(signatureField);

  saveButton.addEventListener('click', function (event) {
    if (signaturePad.isEmpty()){
      event.preventDefault();
    } else {
      signatureField.setAttribute('value', signaturePad.toDataURL("image/svg+xml"));
    }
  });

  cancelButton.addEventListener('click', function (event) {
    signaturePad.clear();
  });

  // slimselect
  new SlimSelect({
    select: '#user_id',
    settings: {
      searchPlaceholder: 'Recherche',
      searchText: 'Pas de résultat',
      searchingText: 'Recherche...',
      placeholderText: 'Tout le monde a signé !',
    }
  })
</script>
