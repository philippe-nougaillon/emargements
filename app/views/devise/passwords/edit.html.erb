<div class="flex flex-col justify-center items-center h-screen">
  <h1 class="text-2xl font-bold mb-4">Changer de mot de passe</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="field">
      <%= f.label :password, "Nouveau mot de passe" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'input input-sm input-bordered w-full', required: true %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, "Confirmez le mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input input-sm input-bordered w-full', required: true %>
    </div>
  
    <div class="actions">
      <%= f.submit "Changer mon mot de passe", class: 'btn btn-outline btn-primary btn-lg w-full my-4' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
