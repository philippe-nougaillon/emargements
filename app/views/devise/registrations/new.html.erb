<div class="flex flex-col justify-center max-w-96 p-8 shadow-xl mx-auto">
  <h1 class="text-2xl font-bold border-b border-gray-400 pb-4 w-full text-center mb-4">
    <%= page_title!("Inscription") %>
  </h1>

  <div class="w-full">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class:'input input-sm input-bordered w-full', required: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'input input-sm input-bordered w-full', required: true %>
      </div>

      <div class="field my-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input input-sm input-bordered w-full', required: true %>
      </div>

      <div class="actions">
        <%= f.submit "S'inscrire", class: 'btn btn-outline btn-primary w-full mt-4 mb-8' %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
